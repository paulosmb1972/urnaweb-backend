const express = require("express");
const app = express();

app.use(express.json());

// endpoint chamado apÃ³s pagamento
app.post("/confirmar-pagamento", (req, res) => {
    // aqui no futuro o Mercado Pago avisa
    res.json({ liberado: true });
});

// endpoint que o site consulta
app.get("/status-pagamento", (req, res) => {
    res.json({ pago: true });
});

const PORT = process.env.PORT || 3000;
app.listen(PORT, () => {
    console.log("Backend UrnaWeb rodando");
});
