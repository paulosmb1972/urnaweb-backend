<script>
const API = "http://localhost:3000";
const PAYMENT_LINK = "https://mpago.la/1VakcdN";

let election={name:"",cargos:[]};
let currentCargo=0;
let selected=[];
let lang="pt";

/* TELAS */
function showScreen(id){
    document.querySelectorAll(".screen").forEach(s=>s.classList.remove("active"));
    document.getElementById(id).classList.add("active");
}

/* LOGIN + CÃ“DIGO */
function sendCode(){
    const email=userEmail.value.trim();
    if(!email.endsWith("@gmail.com")){
        alert("Use um Gmail vÃ¡lido");
        return;
    }
    fetch(API+"/send-code",{
        method:"POST",
        headers:{"Content-Type":"application/json"},
        body:JSON.stringify({email})
    }).then(()=>showScreen("codeScreen"))
      .catch(()=>alert("Erro ao enviar cÃ³digo"));
}

function validateCode(){
    fetch(API+"/validate-code",{
        method:"POST",
        headers:{"Content-Type":"application/json"},
        body:JSON.stringify({code:userCode.value})
    }).then(r=>{
        if(!r.ok) throw Error();
        return fetch(API+"/can-create-election");
    }).then(r=>r.json())
      .then(d=>{
        if(d.allowed) showScreen("setup");
        else showScreen("payment");
      }).catch(()=>alert("CÃ³digo invÃ¡lido"));
}

/* PAGAMENTO */
function goToPayment(){
    window.open(PAYMENT_LINK,"_blank");
}
function checkPayment(){
    fetch(API+"/can-create-election")
        .then(r=>r.json())
        .then(d=>{
            if(d.allowed) showScreen("setup");
            else alert("Pagamento ainda nÃ£o identificado");
        });
}

/* CARGO */
function addCargo(){
    const cargo=cargoName.value;
    const max=parseInt(maxVotes.value);
    const namesFile=candidateNames.files[0];
    const photos=[...candidatePhotos.files];
    if(!cargo||!max||!namesFile){alert("Campos obrigatÃ³rios");return;}
    const reader=new FileReader();
    reader.onload=()=>{
        const names=reader.result.split("\n").filter(n=>n.trim());
        const candidates=names.map((n,i)=>({
            name:n.trim(),
            photo:photos[i]?URL.createObjectURL(photos[i]):"",
            votes:0
        }));
        election.cargos.push({cargo,max,candidates});
        cargoList.innerHTML+=`<p>âœ” ${cargo}</p>`;
    };
    reader.readAsText(namesFile);
}

/* VOTAÃ‡ÃƒO */
function startVoting(){
    if(!election.cargos.length){alert("Adicione cargos");return;}
    election.name=electionName.value;
    currentCargo=0;
    showCargo();
}

function showCargo(){
    selected=[];
    showScreen("voting");
    const c=election.cargos[currentCargo];
    cargoTitle.innerText=c.cargo;
    candidates.innerHTML="";
    c.candidates.forEach((cd,i)=>{
        const d=document.createElement("div");
        d.className="candidate";
        d.innerHTML=`<img src="${cd.photo}"><p>${cd.name}</p>`;
        d.onclick=()=>toggle(i,d);
        candidates.appendChild(d);
    });
}

function toggle(i,div){
    const max=election.cargos[currentCargo].max;
    if(selected.includes(i)){
        selected=selected.filter(x=>x!==i);
        div.classList.remove("selected");
    }else{
        if(selected.length>=max){alert("Limite atingido");return;}
        selected.push(i);
        div.classList.add("selected");
    }
}

function confirmVote(){
    const c=election.cargos[currentCargo];
    selected.forEach(i=>c.candidates[i].votes++);
    if(currentCargo<election.cargos.length-1){
        currentCargo++;
        showCargo();
    }else showScreen("afterVote");
}

function nextVoter(){
    currentCargo=0;
    showCargo();
}

function finishElection(){
    showScreen("results");
    resultContent.innerHTML=`<h3>${election.name}</h3>`;
    election.cargos.forEach(c=>{
        resultContent.innerHTML+=`<h4>${c.cargo}</h4>`;
        c.candidates.forEach(cd=>{
            resultContent.innerHTML+=`<p>${cd.name}: ${cd.votes}</p>`;
        });
    });
}

function exportPDF(){
    html2pdf().from(resultContent).save();
}

/* IDIOMA */
function setLang(l){lang=l;}
</script>

</body>
</html>
